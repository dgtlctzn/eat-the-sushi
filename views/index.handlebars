<div id="header">
    <h1>Eat The Sushi</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-3 menu">
            <h2>Menu</h2>
            <ul>
                {{#each sushi}}
                {{#unless eaten}}
                <li>
                    <button type="button" class="btn btn-primary eat-button" data-id="{{this.id}}" data-bool="{{this.eaten}}">🍣 Eat Me!</button>
                    {{this.sushi_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-5 gif">
        </div>
        <div class="col-sm-3 eaten">
            <ul>
                {{#each sushi}}
                {{#if eaten}}
                <li class="eaten-list">
                    😋
                    Eaten!
                    {{this.sushi_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-5">
            <form class="sushi-form">
                <div class="form-group">
                    <label>What kind of sushi would you like to add to the menu?</label>
                    <input class="form-control" id="sushi-input">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>